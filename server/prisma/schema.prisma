generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId String   @unique
  type    UserType
}

enum UserType {
  Student
  Instructor
  Admin
}

enum LessonType {
  Teoretical
  Practical
  PreDrivingTest
}
